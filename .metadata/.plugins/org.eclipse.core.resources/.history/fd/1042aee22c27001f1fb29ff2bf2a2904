package test;
import java.io.BufferedReader;
import java.io.DataOutputStream;
import java.io.InputStreamReader;
import java.net.HttpURLConnection;
import java.net.URL;
import java.net.URLEncoder;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

import com.google.gson.Gson;
import com.google.gson.GsonBuilder;

public class Test2 {
	 public static void main(String[] args) {
	        try {
	            // Parámetros a enviar
	            Map<String, String> parametros = new HashMap<>();
	            parametros.put("diccionario", "{\"clave1\":\"valor1\",\"clave2\":\"valor2\"}");
	            parametros.put("lista1", "[1,2,3,4,5]");
	            parametros.put("lista2", "[\"a\",\"b\",\"c\",\"d\",\"e\"]");
	            parametros.put("cadena", "Hola desde Java");

	            // Construir la URL de la API de FastAPI
	            String apiUrl = "http://localhost:8000/datos";

	            // Agregar los parámetros de consulta a la URL
	            StringBuilder urlBuilder = new StringBuilder(apiUrl);
	            urlBuilder.append("?");
	            for (Map.Entry<String, String> entry : parametros.entrySet()) {
	                urlBuilder.append(URLEncoder.encode(entry.getKey(), "UTF-8"));
	                urlBuilder.append("=");
	                urlBuilder.append(URLEncoder.encode(entry.getValue(), "UTF-8"));
	                urlBuilder.append("&");
	            }
	            String urlString = urlBuilder.toString();

	            // Crear la URL
	            URL url = new URL(urlString);

	            // Abrir conexión HTTP
	            HttpURLConnection con = (HttpURLConnection) url.openConnection();
	            con.setRequestMethod("GET");

	            // Leer la respuesta
	            BufferedReader in = new BufferedReader(new InputStreamReader(con.getInputStream()));
	            String inputLine;
	            StringBuilder response = new StringBuilder();
	            while ((inputLine = in.readLine()) != null) {
	                response.append(inputLine);
	            }
	            in.close();

	            // Imprimir la respuesta
	            System.out.println("Respuesta de la API de FastAPI:");
	            System.out.println(response.toString());
	        } catch (Exception e) {
	            System.err.println("Error al llamar a la API de FastAPI: " + e.getMessage());
	        }
	    }
	}